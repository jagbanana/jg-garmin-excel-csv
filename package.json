{
    "name": "garmin-sync-desktop",
    "version": "1.0.0",
    "description": "Desktop application for Garmin data sync",
    "main": "./frontend/electron.js",
    "author": {
        "name": "Your Name"
    },
    "scripts": {
        "start-backend": "cd backend && cross-env RUN_API=true python -m src.main",
        "start-frontend": "cd frontend && electron .",
        "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\""
    },
    "build": {
        "appId": "com.garmin.sync",
        "productName": "Garmin Sync",
        "files": [
            "frontend/**/*",
            "launcher.js",
            "!frontend/node_modules/**/*"
        ],
        "directories": {
            "output": "dist/electron"
        },
        "extraResources": [
            {
                "from": "dist/garmin_sync_backend.exe",
                "to": "backend/garmin_sync_backend.exe"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "frontend/src/assets/icon.ico"
        }
    },
    "dependencies": {
        "axios": "^1.7.9",
        "electron-store": "^8.1.0"
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "python-shell": "^5.0.0",
        "concurrently": "^8.2.0",
        "cross-env": "^7.0.3"
    }
}